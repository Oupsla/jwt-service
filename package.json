{
  "name": "jwt-service",
  "version": "2.0.0",
  "description": "A simple wrapper for a simpler JWT surface API",
  "main": "dist/jwt.js",
  "metapak": {
    "data": {
      "files": "src/*.ts",
      "testsFiles": "src/*.test.ts",
      "ignore": [
        "dist"
      ],
      "bundleFiles": [
        "dist/**/*.js"
      ]
    },
    "configs": [
      "main",
      "readme",
      "codeclimate",
      "travis"
    ]
  },
  "scripts": {
    "architecture": "jsarch src/*.ts > ARCHITECTURE.md && git add ARCHITECTURE.md",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "cli": "env NODE_ENV=${NODE_ENV:-cli}",
    "compile": "babel --extensions '.ts,.js' src --out-dir=dist",
    "cover": "npm run jest -- --coverage",
    "coveralls": "npm run cover && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "cz": "env NODE_ENV=${NODE_ENV:-cli} git cz",
    "doc": "echo \"# API\" > API.md; jsdoc2md dist/**/*.js >> API.md && git add API.md",
    "jest": "NODE_ENV=test jest",
    "lint": "eslint src/*.ts",
    "metapak": "metapak",
    "precz": "npm run types && npm t && npm run lint && npm run architecture && npm run doc && npm run metapak -- -s",
    "prettier": "prettier --write src/*.ts",
    "preversion": "npm run types && npm run compile && npm t && npm run lint && npm run architecture && npm run doc && npm run metapak -- -s",
    "test": "npm run jest",
    "types": "tsc --declaration --emitDeclarationOnly src/jwt.ts || echo; npm run prettier -- 'src/**/*.d.ts'",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nfroidure/jwt-service.git"
  },
  "keywords": [
    "jwt",
    "knifecycle"
  ],
  "author": {
    "name": "Nicolas Froidure",
    "email": "nicolas.froidure@insertafter.com",
    "url": "https://insertafter.com/en/index.html"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nfroidure/jwt-service/issues"
  },
  "homepage": "https://github.com/nfroidure/jwt-service#readme",
  "dependencies": {
    "jsonwebtoken": "^8.4.0",
    "knifecycle": "^5.0.4",
    "ms": "^2.1.1",
    "yerror": "^2.1.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@types/jest": "^23.3.12",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/ms": "^0.7.30",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-knifecycle": "^1.0.1",
    "commitizen": "^3.0.5",
    "conventional-changelog-cli": "^2.0.11",
    "coveralls": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.12.0",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "^23.6.0",
    "jsarch": "2.0.1",
    "jsdoc-to-markdown": "^4.0.1",
    "metapak": "^2.0.0",
    "metapak-nfroidure": "9.0.5",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.2",
    "typescript-eslint-parser": "^21.0.2"
  },
  "contributors": [],
  "engines": {
    "node": ">=8.12.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "greenkeeper": {
    "ignore": [
      "commitizen",
      "cz-conventional-changelog",
      "conventional-changelog-cli"
    ]
  },
  "jest": {
    "coverageReporters": [
      "lcov"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.(js|jsx)?$": "babel-jest"
    }
  },
  "babel": {
    "presets": [
      "@babel/typescript",
      [
        "@babel/env",
        {
          "targets": {
            "node": "8.12.0"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/proposal-class-properties",
      "babel-plugin-knifecycle"
    ]
  },
  "files": [
    "dist/**/*.js",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parser": "typescript-eslint-parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "modules": true
    },
    "env": {
      "es6": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "semi": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "jsarch": {
    "parserOptions": {
      "plugins": [
        "typescript"
      ]
    }
  }
}
