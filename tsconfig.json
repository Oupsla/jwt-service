{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["jest", "ms", "jsonwebtoken"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
